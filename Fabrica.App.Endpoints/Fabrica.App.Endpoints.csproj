        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <Title>Fabrica.App</Title>
        <Authors>Pond Hawk Technologies Inc.</Authors>
        <Description>Tools for building Fabrica based REST API backends.</Description>
        <Copyright>Pond Hawk Technologies Inc. (c) 2025</Copyright>
        <PackageIcon>smithy.png</PackageIcon>
        <RootNamespace>Fabrica.App</RootNamespace>
        <PackageId>Fabrica.App.Endpoints</PackageId>
    </PropertyGroup>


    <ItemGroup>
        <FrameworkReference Include="Microsoft.AspNetCore.App" />
